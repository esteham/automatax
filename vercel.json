{
    "version": 2,
    "functions": {
        "api/**/*.php": {
            "runtime": "vercel-php@0.7.3"
        }
    },
    "outputDirectory": "public",
    "routes": [
        {
            "src": "/assets/(css|favicon|images|js)/(.*)",
            "dest": "assets/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php?/$1"
        }
    ]
}
